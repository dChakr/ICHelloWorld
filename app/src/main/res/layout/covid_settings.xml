<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/covid_settings">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="269dp"
        android:layout_height="245dp"
        android:layout_marginStart="196dp"
        android:layout_marginLeft="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123"
        app:srcCompat="@drawable/covid" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="425dp"
        android:layout_height="40dp"
        android:background="#C0A7ED"
        android:gravity="center"
        android:text="PandemicPals"
        android:textColor="#341963"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="414dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/purple_text_colour"
        android:gravity="center"
        android:text="@string/covid_settings_page_title"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="145dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:text="Current Address: "
        android:textColor="@color/purple_text_colour"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="145dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:text="Covid Status: "
        android:textColor="@color/purple_text_colour"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/covid_choices"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="85dp"
        android:layout_height="31dp"
        android:layout_marginBottom="4dp"
        android:gravity="fill_vertical"
        android:text="Name: "
        android:textColor="@color/purple_text_colour"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPostalAddress2"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Address Line 1"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPostalAddress3"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Adress Line 2"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPostalAddress4"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="City"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPostalAddress5"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Country"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPostalAddress6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPostalAddress6"
        android:layout_width="378dp"
        android:layout_height="40dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:text="Postcode"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="299dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Name Here"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/covid_choices"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClick"
            android:text="No symmptoms and havn't tested positive"
            android:textSize="15dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClick"
            android:text="Currently self-isolating but not tested positive"
            android:textSize="15dp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonClick"
            android:text="Tested positive for Covid-19 and am self-isolating"
            android:textSize="15dp" />

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>